{
  "name": "@otpdock/client",
  "version": "0.1.0",
  "description": "Fetch OTPs from your otpdock.com inbox for end-to-end testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "otp",
    "e2e",
    "testing",
    "email",
    "otpdock",
    "playwright",
    "cypress"
  ],
  "author": "OTPDock <support@otpdock.com> (https://otpdock.com)",
  "contributors": [
    {
      "name": "OTPDock Team",
      "email": "support@otpdock.com",
      "url": "https://otpdock.com"
    }
  ],
  "license": "MIT",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otpdock/node-client.git"
  },
  "bugs": {
    "url": "https://github.com/otpdock/node-client/issues"
  },
  "homepage": "https://github.com/otpdock/node-client#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@size-limit/preset-small-lib": "^11.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.0",
    "typescript": "^4.9.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 kb"
    }
  ]
}
